{
  "name": "frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron.cjs",
  "description": "Templaunch â€“ Smart workspace switcher for productivity modes",
  "author": {
    "name": "Jay Rana"
  },
  "scripts": {
  "dev": "concurrently -k -n \"VITE,ELECTRON\" -c \"bgBlue.bold,bgMagenta.bold\" \"vite\" \"wait-on tcp:5173 && electron .\"",
  "electron": "electron .",
  "build:react": "cross-env VITE_API_URL=https://contextswap-backend.onrender.com/api vite build",
  "build": "npm run build:react && electron-builder",
  "start": "electron .",
  "dist": "electron-builder --win --x64",
  "release": "electron-builder --win --x64 --publish always",
  "lint": "eslint .",
  "preview": "vite preview"
},



  "build": {
    "appId": "com.Templaunch.app",
    "productName": "Templaunch",
    "win": {
      "icon": "public/ico.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "public/ico.png"
    },
    "mac": {
      "icon": "public/ico.png"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "asar": true,
    "publish": {
      "provider": "github",
      "owner": "JaYRaNa213",
      "repo": "ModoCore_Desktop_APP"
    }
  },
  "dependencies": {
    "axios": "^1.10.0",
    "clsx": "^2.1.1",
    "cron-parser": "^5.3.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.525.0",
    "pencil": "^1.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.3",
    "recharts": "^3.1.0",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "vite": "^7.0.5",
    "vite-plugin-static-copy": "^3.1.1",
    "wait-on": "^9.0.3"
  }
}
